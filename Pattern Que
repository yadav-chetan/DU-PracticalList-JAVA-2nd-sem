import java.util.Scanner;

public class Q4 {
    public static void main(String arg[]) {
        Scanner SC = new Scanner(System.in);
        System.out.println("enter your integer :");
        int n = SC.nextInt();
        float sum = 0;
        float fac = 1;
        for (float i = 1; i <= n; i++) {
            fac=fac*i;
            sum=sum+(1/fac);

        }
        System.out.println("sum is "+sum);
    }
}
